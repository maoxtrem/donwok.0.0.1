{% extends 'base.html.twig' %}

{% block title %}Movimientos de Caja - DonWok{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold m-0">Movimientos Financieros</h2>
            <p class="text-muted">Historial de cierres e ingresos</p>
        </div>
        <div>
            <a href="/caja" class="btn btn-outline-secondary fw-bold px-4 shadow-sm">
                <i class="bi bi-arrow-left me-2"></i> VOLVER A CAJA
            </a>
        </div>
    </div>

    <div class="glass-card shadow-sm overflow-hidden">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-secondary">
                <tr>
                    <th class="ps-4">Fecha</th>
                    <th>Categoría / Cuenta</th>
                    <th>Descripción</th>
                    <th class="text-center">Tipo</th>
                    <th class="pe-4 text-end">Monto</th>
                </tr>
            </thead>
            <tbody id="movimientos-list">
                <tr><td colspan="5" class="text-center py-5 text-muted">Cargando movimientos...</td></tr>
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script type="module">
    import CoreAPI from '/js/core.js';
    const api = new CoreAPI();

    async function cargarMovimientos() {
        try {
            const movimientos = await api.get('/caja/movimientos');
            renderMovimientos(movimientos);
        } catch (err) {
            console.error(err);
            Swal.fire('Error', 'No se pudieron cargar los movimientos', 'error');
        }
    }

    function renderMovimientos(movimientos) {
        const body = document.getElementById('movimientos-list');
        
        if (!movimientos || movimientos.length === 0) {
            body.innerHTML = '<tr><td colspan="5" class="text-center py-5 text-muted">No se han registrado movimientos</td></tr>';
            return;
        }

        body.innerHTML = movimientos.map(m => {
            const badgeClass = m.tipo === 'INGRESO' ? 'bg-success-subtle text-success' : 'bg-danger-subtle text-danger';
            return `
                <tr>
                    <td class="ps-4">
                        <div class="fw-bold">${m.fecha.split(' ')[0]}</div>
                        <div class="text-muted small">${m.fecha.split(' ')[1]}</div>
                    </td>
                    <td>
                        <div class="fw-bold text-dark">${m.categoria}</div>
                        <div class="text-muted small">${m.cuenta}</div>
                    </td>
                    <td class="text-muted">${m.descripcion || '-'}</td>
                    <td class="text-center"><span class="badge ${badgeClass} border px-3 py-2">${m.tipo}</span></td>
                    <td class="pe-4 text-end fw-bold h6 m-0 ${m.tipo === 'INGRESO' ? 'text-success' : 'text-danger'}">
                        ${m.tipo === 'INGRESO' ? '+' : '-'}$${parseFloat(m.monto).toFixed(2)}
                    </td>
                </tr>
            `;
        }).join('');
    }

    cargarMovimientos();
</script>
{% endblock %}
