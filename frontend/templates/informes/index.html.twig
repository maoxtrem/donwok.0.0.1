{% extends 'base.html.twig' %}

{% block title %}Informes y Analítica - DonWok{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold m-0">Análisis de Negocio</h2>
            <p class="text-muted">Rendimiento financiero y crecimiento en tiempo real</p>
        </div>
        <div class="glass-card p-2 d-flex gap-2">
            <input type="date" id="fecha-desde" class="form-control form-control-sm border-0 bg-transparent fw-bold">
            <span class="text-muted align-self-center">hasta</span>
            <input type="date" id="fecha-hasta" class="form-control form-control-sm border-0 bg-transparent fw-bold">
            <button class="btn btn-primary btn-sm px-3 fw-bold" onclick="cargarInformes()">
                <i class="bi bi-filter me-1"></i> FILTRAR
            </button>
        </div>
    </div>

    <!-- TARJETAS DE INDICADORES (KPIs) -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="glass-card p-3 border-start border-4 border-success h-100">
                <small class="text-muted fw-bold d-block mb-1">TOTAL INGRESOS</small>
                <div class="d-flex justify-content-between align-items-end">
                    <h3 class="fw-extrabold m-0 text-success" id="kpi-ingresos">$0.00</h3>
                    <div id="crecimiento-badge" class="badge rounded-pill bg-success-subtle text-success small">
                        <i class="bi bi-arrow-up"></i> <span id="kpi-crecimiento">0%</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="glass-card p-3 border-start border-4 border-danger h-100">
                <small class="text-muted fw-bold d-block mb-1">TOTAL EGRESOS</small>
                <h3 class="fw-extrabold m-0 text-danger" id="kpi-egresos">$0.00</h3>
                <small class="text-muted small">Incluye gastos e inversiones</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="glass-card p-3 border-start border-4 border-primary h-100">
                <small class="text-muted fw-bold d-block mb-1">UTILIDAD BRUTA (Ventas-Costos)</small>
                <h3 class="fw-extrabold m-0 text-primary" id="kpi-utilidad">$0.00</h3>
                <div class="progress mt-2" style="height: 4px;">
                    <div class="progress-bar bg-primary" id="utilidad-bar" style="width: 0%"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="glass-card p-3 border-start border-4 border-info h-100">
                <small class="text-muted fw-bold d-block mb-1">PROM. VENTA DIARIA</small>
                <h3 class="fw-extrabold m-0 text-info" id="kpi-promedio">$0.00</h3>
                <small class="text-muted small">Basado en periodo seleccionado</small>
            </div>
        </div>
    </div>

    <!-- GRÁFICAS -->
    <div class="row g-4">
        <!-- Gráfica Lineal: Tendencia -->
        <div class="col-lg-8">
            <div class="glass-card p-4 shadow-sm h-100">
                <div class="d-flex justify-content-between mb-4">
                    <h6 class="fw-bold m-0"><i class="bi bi-graph-up me-2 text-primary"></i> Tendencia Financiera Diaria</h6>
                    <div class="small text-muted">Ingresos vs Egresos</div>
                </div>
                <div style="height: 350px;">
                    <canvas id="chart-tendencia"></canvas>
                </div>
            </div>
        </div>

        <!-- Gráfica de Barras: Rentabilidad por Producto -->
        <div class="col-lg-4">
            <div class="glass-card p-4 shadow-sm h-100">
                <h6 class="fw-bold mb-4"><i class="bi bi-pie-chart me-2 text-info"></i> Ganancia por Producto</h6>
                <div style="height: 350px;">
                    <canvas id="chart-rentabilidad"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script type="module">
    import CoreAPI from '/js/core.js';
    const api = new CoreAPI();

    let chartTendencia = null;
    let chartRentabilidad = null;

    // Inicializar fechas (últimos 30 días)
    const hoy = new Date();
    const hace30 = new Date();
    hace30.setDate(hoy.getDate() - 30);

    document.getElementById('fecha-desde').value = hace30.toISOString().split('T')[0];
    document.getElementById('fecha-hasta').value = hoy.toISOString().split('T')[0];

    async function cargarInformes() {
        const desde = document.getElementById('fecha-desde').value;
        const hasta = document.getElementById('fecha-hasta').value;
        const params = `?desde=${desde}&hasta=${hasta}`;

        try {
            const [movs, rent, resumen] = await Promise.all([
                api.get(`/informes/movimientos-diarios${params}`),
                api.get(`/informes/rentabilidad-productos${params}`),
                api.get(`/informes/resumen-general${params}`)
            ]);

            renderKPIs(resumen.kpis);
            renderChartTendencia(movs);
            renderChartRentabilidad(rent);
        } catch (err) { console.error(err); }
    }

    function renderKPIs(kpis) {
        const fmt = (v) => new Intl.NumberFormat('es-CO', { style: 'currency', currency: 'COP', maximumFractionDigits: 0 }).format(v);
        
        document.getElementById('kpi-ingresos').innerText = fmt(kpis.total_ingresos);
        document.getElementById('kpi-egresos').innerText = fmt(kpis.total_egresos);
        document.getElementById('kpi-utilidad').innerText = fmt(kpis.utilidad_bruta);
        document.getElementById('kpi-promedio').innerText = fmt(kpis.promedio_venta_diaria);
        
        const crecimiento = document.getElementById('kpi-crecimiento');
        const badge = document.getElementById('crecimiento-badge');
        crecimiento.innerText = `${kpis.crecimiento_porcentaje}%`;
        
        if (kpis.crecimiento_porcentaje >= 0) {
            badge.className = 'badge rounded-pill bg-success-subtle text-success small';
            badge.innerHTML = `<i class="bi bi-arrow-up"></i> ${kpis.crecimiento_porcentaje}%`;
        } else {
            badge.className = 'badge rounded-pill bg-danger-subtle text-danger small';
            badge.innerHTML = `<i class="bi bi-arrow-down"></i> ${kpis.crecimiento_porcentaje}%`;
        }

        // Barra de utilidad (proporción vs ingresos)
        const porcUtilidad = kpis.total_ventas > 0 ? (kpis.utilidad_bruta / kpis.total_ventas) * 100 : 0;
        document.getElementById('utilidad-bar').style.width = `${Math.min(100, porcUtilidad)}%`;
    }

    function renderChartTendencia(data) {
        const ctx = document.getElementById('chart-tendencia').getContext('2d');
        
        // Agrupar datos por fecha
        const labels = [...new Set(data.map(d => d.fecha))];
        const ingresos = labels.map(l => data.filter(d => d.fecha === l && d.tipo === 'INGRESO').reduce((s, i) => s + parseFloat(i.total), 0));
        const egresos = labels.map(l => data.filter(d => d.fecha === l && d.tipo === 'EGRESO').reduce((s, i) => s + parseFloat(i.total), 0));

        if (chartTendencia) chartTendencia.destroy();

        chartTendencia = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Ingresos',
                        data: ingresos,
                        borderColor: '#48bb78',
                        backgroundColor: 'rgba(72, 187, 120, 0.1)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Egresos',
                        data: egresos,
                        borderColor: '#f56565',
                        backgroundColor: 'rgba(245, 101, 101, 0.1)',
                        fill: true,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'bottom' } },
                scales: {
                    y: { beginAtZero: true, grid: { color: '#f1f5f9' } },
                    x: { grid: { display: false } }
                }
            }
        });
    }

    function renderChartRentabilidad(data) {
        const ctx = document.getElementById('chart-rentabilidad').getContext('2d');
        const limit = data.slice(0, 10); // Top 10

        if (chartRentabilidad) chartRentabilidad.destroy();

        chartRentabilidad = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: limit.map(d => d.nombre),
                datasets: [{
                    label: 'Ganancia Bruta',
                    data: limit.map(d => parseFloat(d.ganancia)),
                    backgroundColor: '#4299e1',
                    borderRadius: 8
                }]
            },
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { beginAtZero: true, grid: { color: '#f1f5f9' } },
                    y: { grid: { display: false } }
                }
            }
        });
    }

    window.cargarInformes = cargarInformes;
    cargarInformes();
</script>
{% endblock %}
