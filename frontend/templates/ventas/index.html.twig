{% extends 'base.html.twig' %}

{% block title %}Punto de Venta - DonWok{% endblock %}

{% block stylesheets %}
<style>
    .pos-grid { display: flex; height: calc(100vh - 120px); gap: 1.5rem; }
    .menu-panel { flex: 1; overflow-y: auto; padding-right: 0.5rem; }
    .invoice-panel { width: 400px; display: flex; flex-direction: column; }
    
    .product-card {
        background: white; border-radius: 15px; padding: 1.2rem;
        cursor: pointer; transition: all 0.2s; border: 1px solid transparent;
        text-align: center; height: 100%; display: flex; flex-direction: column; justify-content: center;
    }
    .product-card:hover { transform: translateY(-3px); border-color: #4299e1; box-shadow: 0 8px 15px rgba(66,153,225,0.1); }
    
    .invoice-card { background: white; border-radius: 20px; flex-grow: 1; display: flex; flex-direction: column; overflow: hidden; }
    .invoice-header { background: #1a365d; color: white; padding: 1.2rem; }
    .invoice-body { flex-grow: 1; overflow-y: auto; padding: 1rem; }
    
    .btn-qty { width: 26px; height: 26px; border-radius: 50%; border: none; background: #edf2f7; font-weight: bold; display: flex; align-items: center; justify-content: center; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="mb-4">
        <h2 class="fw-bold text-dark">Ventas (POS)</h2>
    </div>

    <div class="pos-grid">
        {# Menú de Productos #}
        <div class="menu-panel">
            <div class="row g-3" id="productsMenu">
                {# Cargado por JS #}
            </div>
        </div>

        {# Factura / Pedido #}
        <div class="invoice-panel">
            <div class="invoice-card shadow-sm">
                <div class="invoice-header">
                    <h5 class="mb-0 fw-bold">Pedido Actual</h5>
                    <small class="opacity-75" id="cajeroName">Cajero: Admin</small>
                </div>
                <div class="invoice-body" id="invoiceItems">
                    <div class="text-center text-muted mt-5">Selecciona productos para comenzar</div>
                </div>
                <div class="p-4 border-top bg-light">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="h5 mb-0">Total</span>
                        <span class="h3 mb-0 fw-bold text-primary" id="totalAmount">$0.00</span>
                    </div>
                    <button class="btn btn-success w-100 py-3 fw-bold shadow-sm" style="border-radius: 12px;" onclick="processOrder()">
                        CREAR PEDIDO
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script type="module">
    import CoreAPI from '/js/core.js';
    const api = new CoreAPI();
    let cart = [];

    document.addEventListener('DOMContentLoaded', async () => {
        try {
            const products = await api.get('/productos');
            renderMenu(products.filter(p => p.activo));
        } catch (err) { console.error(err); }
    });

    function renderMenu(products) {
        const menu = document.getElementById('productsMenu');
        menu.innerHTML = products.map(p => `
            <div class="col-md-4 col-lg-3">
                <div class="product-card glass-card" onclick='addToCart(${JSON.stringify(p)})'>
                    <h6 class="fw-bold text-dark mb-1">${p.nombre}</h6>
                    <span class="text-primary fw-bold">$${parseFloat(p.precioActual).toFixed(2)}</span>
                </div>
            </div>
        `).join('');
    }

    window.addToCart = (product) => {
        const existing = cart.find(i => i.id === product.id);
        if (existing) {
            existing.qty++;
        } else {
            cart.push({...product, qty: 1});
        }
        renderInvoice();
    }

    window.changeQty = (id, delta) => {
        const item = cart.find(i => i.id === id);
        item.qty += delta;
        if (item.qty <= 0) cart = cart.filter(i => i.id !== id);
        renderInvoice();
    }

    function renderInvoice() {
        const body = document.getElementById('invoiceItems');
        const totalLabel = document.getElementById('totalAmount');
        
        if (cart.length === 0) {
            body.innerHTML = '<div class="text-center text-muted mt-5">Selecciona productos para comenzar</div>';
            totalLabel.innerText = '$0.00';
            return;
        }

        let total = 0;
        let html = '<table class="table table-borderless align-middle">';
        cart.forEach(item => {
            const subtotal = item.precioActual * item.qty;
            total += subtotal;
            html += `
                <tr class="border-bottom">
                    <td>
                        <div class="fw-bold small text-dark">${item.nombre}</div>
                        <small class="text-muted">$${parseFloat(item.precioActual).toFixed(2)}</small>
                    </td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <button class="btn-qty" onclick="changeQty(${item.id}, -1)">-</button>
                            <span class="small fw-bold">${item.qty}</span>
                            <button class="btn-qty" onclick='addToCart({id:${item.id}, nombre:"${item.nombre}", precioActual:${item.precioActual}})'>+</button>
                        </div>
                    </td>
                    <td class="text-end fw-bold small">$${subtotal.toFixed(2)}</td>
                </tr>
            `;
        });
        html += '</table>';
        body.innerHTML = html;
        totalLabel.innerText = `$${total.toFixed(2)}`;
    }

    window.processOrder = async () => {
        if (cart.length === 0) return;
        try {
            // Aquí iría el POST /ventas al Core si el endpoint existiera
            alert('¡Pedido creado con éxito! (Simulado)');
            cart = [];
            renderInvoice();
        } catch (err) { alert(err.message); }
    }
</script>
{% endblock %}
