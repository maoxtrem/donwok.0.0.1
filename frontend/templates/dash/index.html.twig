{% extends 'base.html.twig' %}

{% block title %}Dashboard - DonWok{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="mb-4">
        <h2 class="fw-bold text-dark">Panel de Control</h2>
        <p class="text-muted">Bienvenido al sistema de gestión DonWok</p>
    </div>

    <div class="row g-4">
        {# Tarjetas de Resumen #}
        <div class="col-md-4">
            <div class="glass-card p-4 text-center">
                <i class="bi bi-box-seam h1 text-primary mb-3"></i>
                <h5 class="fw-bold">Productos</h5>
                <p class="text-muted mb-0">Gestiona tu inventario</p>
                <a href="/productos" class="btn btn-link text-decoration-none mt-2">Ver catálogo</a>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="glass-card p-4 text-center">
                <i class="bi bi-cart3 h1 text-success mb-3"></i>
                <h5 class="fw-bold">Ventas</h5>
                <p class="text-muted mb-0">Realizar nuevo pedido</p>
                <a href="#" class="btn btn-link text-decoration-none mt-2">Ir al POS</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="glass-card p-4 text-center">
                <i class="bi bi-person-badge h1 text-warning mb-3"></i>
                <h5 class="fw-bold">Usuarios</h5>
                <p class="text-muted mb-0">Control de acceso</p>
                <a href="#" class="btn btn-link text-decoration-none mt-2">Configurar</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
